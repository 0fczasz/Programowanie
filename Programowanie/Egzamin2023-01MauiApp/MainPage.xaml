<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Egzamin2023_01MauiApp.MainPage"
             x:Name="thisPage"
             BindingContext="{x:Reference thisPage}"
          >
    <ScrollView
           Background="LightSteelBlue">
        <Grid ColumnDefinitions="*, *"
              RowDefinitions="auto, auto">
            <Label Text="Dane pracownika"
                    Grid.Column="0"
                   Grid.Row="0"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   ZIndex="1"/>
            <Border
                Grid.Column="0"
                Grid.Row="0"
                Stroke="White"
                StrokeThickness="4"
                StrokeShape="RoundRectangle 20,20,20,20"
                Margin="0,10,0,0">
                <Grid
                    ColumnDefinitions="auto,*"
                    ColumnSpacing="10"
                    RowDefinitions="auto,auto,auto" >
                    <Label Text="Imię"
                           Grid.Column="0"
                           Grid.Row="0"/>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="0"
                        Background="White"
                        Text="{Binding Name}"/>
                    <Label Text="Nazwisko"
                           Grid.Column="0"
                           Grid.Row="1"/>
                    <Entry Text="{Binding LastName}"
                          Grid.Column="1"
                          Grid.Row="1"
                        Background="White"/>    
                    <Label Text="Stanowisko"
                           Grid.Column="0"
                           Grid.Row="2"/>
                    <Picker SelectedItem="{Binding SelectedProffesion}"
                        ItemsSource="{Binding ListOfProffesion}"
                          Grid.Column="1"
                          Grid.Row="2"
                        Background="White"/>

                </Grid>
            
            
            </Border>
            <Label Text="Generowanie hasła"
            Grid.Column="1"
           Grid.Row="0"
           HorizontalOptions="Center"
           VerticalOptions="Start"
           ZIndex="1"/>
            <Border
        Grid.Column="1"
        Grid.Row="0"
        Stroke="White"
        StrokeThickness="4"
        StrokeShape="RoundRectangle 20,20,20,20"
        Margin="0,10,0,0">

                <StackLayout>
                    
                    <Grid
                        ColumnDefinitions="auto,*"
                        ColumnSpacing="10">
                            <Label Text="Ile znaków?"
                                   Grid.Column="0"/>
                            <Entry 
                                Grid.Column="1"
                                BackgroundColor="white"/>
                        </Grid>
                    <StackLayout
                        Orientation="Horizontal">
                        <Grid
                            ColumnDefinitions="auto, *"
                            RowDefinitions="auto,auto,auto">
                            <CheckBox
                                Grid.Column="0"
                                Grid.Row="0"/>
                            <Label Text="Małe i wielkie litery"
                                Grid.Column="1"
                                Grid.Row="0"/>
                            <CheckBox
                                Grid.Column="0"
                                Grid.Row="1"/>
                            <Label Text="Cyfry"
                                Grid.Column="1"
                                Grid.Row="1"/>
                            <CheckBox
                                Grid.Column="0"
                                Grid.Row="2"/>
                            <Label Text="Znaki specjalne"
                                Grid.Column="1"
                                Grid.Row="2"/>



                        </Grid>
                    </StackLayout>
                    <Button Text="Generuj hasło"
                            HorizontalOptions="Center"
                            Background="SteelBlue"
                            Clicked="GeneratePass"/>
                </StackLayout>
                

            </Border>



            <Button Text="Zatwierdź"
                    Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    MinimumWidthRequest="200"
                    Background="SteelBlue"
                    Clicked="Confirm"/>
        </Grid>
        
        
    </ScrollView>

           

</ContentPage>
